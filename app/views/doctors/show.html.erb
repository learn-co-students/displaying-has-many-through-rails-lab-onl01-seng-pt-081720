<h1><%= @doctor.name %></h1>

<h2>Department</h2>
<p><%= @doctor.department %></p>

<h2>Appointments</h2>
<% @doctor.appointments.each do |appt| %> 
    <h2><%= appt.appointment_datetime.strftime("%B %d, %Y at %k:%M") %></h2> 
    <h3><%= link_to appt.patient.name, patient_path(appt.patient) %></h3>
<% end %> 